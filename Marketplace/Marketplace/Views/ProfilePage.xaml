<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplace.Views.ProfilePage"
             Title="Профиль">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical"
                         Margin="20,10,20,10"
                         Spacing="10">
                <Image Source="{Binding PhotoName}"
                       x:Name="imgProfile"
                       WidthRequest="350"
                       HeightRequest="350"/>
                <Button x:Name="btnGetPhoto" Text="Выбрать фото"
                        FontSize="16"
                        Clicked="BtnGetPhoto_Clicked"
                        HorizontalOptions="CenterAndExpand"/>
                <Entry x:Name="tbFirstName" Placeholder="Имя..."/>
                <Entry x:Name="tbLastName" Placeholder="Фамилия..."/>
                <Entry x:Name="tbPhone" Placeholder="Телефон..."
                       Keyboard="Telephone"/>
                <Entry x:Name="tbEmail" Placeholder="Почта..." 
                       Keyboard="Email"/>
                <Button x:Name="btnSaveChanges" Text="Сохранить изменения"
                        FontSize="16"
                        Clicked="BtnSaveChanges_Clicked"
                        HorizontalOptions="CenterAndExpand"
                        Margin="0,0,0,10"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>